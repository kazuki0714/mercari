<div class="main sell-new">
  <div class="container">
    <div class="form-heading">新規出品登録</div>
    <div class="form sell-form">
      <div class="form-body">
        <% @item.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_tag("/sell/create",{multipart:true}) do %>
          <p>商品名</p>
          <input name="title" value="title">
               #value="<%= @item.title %>">の場合バリデーションに弾かれた後も入力値が保持される
          <p>金額</p>
          <input name="price" value="price">  
          ＜p>在庫数</p>
          <input name="stock" value="stock">
          <p>商品説明</p>
          <input name="description" value="description">
          <p>商品画像</p>
          <input type="file" name="image" value="image" >
          <input type="submit" value="新規出品登録">
        <% end %>
      </div>
    </div>
  </div>
</div>
