
<%= form_tag("/items/show",:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag '検索', :name => nil %>
<% end %>

  <h4>商品一覧</h4>
<div class="main item-index">
  <% @items.each do |item| %>
     <div class="item-image">
          <img src="<%= item.image %>" width="100">
           <%= item.title %>
           <%= item.price %>
            <%= link_to '詳細へ', "items/#{item.id}" %>
     </div>
    <% end %>



</div>
<%= will_paginate @items %>
