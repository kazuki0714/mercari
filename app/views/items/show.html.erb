

 <%= form_for @item, :url => buy_create_path do |f| %>
 <div>
  <h2>商品詳細</h2>
  <div>
    <strong>商品名</strong>
    <p>
   　<%= f.hidden_field :title %>
   　<%= @item.title %>
    </p>
    <strong>商品画像</strong>
    <p>
 　  <%= f.hidden_field :image %>
    <img src="<%= @item.image %>" width="200">
 　  </p>
    <strong>価格</strong>
    <p>
   <%= f.hidden_field :price %>
   <%= @item.price %>
   </p>
   <strong>在庫数</strong>
    <p>
   <%= f.hidden_field :stock %>
   <%= @item.stock %>
   </p>
   <strong>商品説明</strong>
    <p>
   <%= f.hidden_field :description%>
   <%= @item.description %>
   </p>
    <%= f.hidden_field :user_id, :value => current_user.id %>
　
     　　 <%= f.fields_for :carts do |h| %>
    　　　<strong>購入数</strong>
    　　　<%= f.text_field :quantity %>
    　　　 <% end %>

 </div>
  <%= f.submit '戻る', name: 'back' %>
  <%= f.submit '送信する' %>
 </div>
 <% end %>
